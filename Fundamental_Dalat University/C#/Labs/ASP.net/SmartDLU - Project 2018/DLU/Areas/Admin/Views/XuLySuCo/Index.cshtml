@using DataAccess;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content">
	<div class="row">
		@if (TempData["AlertMessage"] != null)
		{
			<div class="col-lg-12" hide>
				<div id="AlertBox" class="alert text-center @TempData["AlertType"]">
					@Html.Raw(TempData["AlertMessage"])
				</div>
			</div>
		}
		<div class="col-md-12">

			<div class="box box-success box-solid">
				<div class="box-header with-border">
					<h3 class="box-title">Danh sách lịch thi</h3>
					<div class="box-tools pull-right">
						<button type="button" class="btn btn-box-tool" data-widget="collapse">
							<i class="fa fa-minus"></i>
						</button>
					</div>
				</div>
				<!-- /.box-header -->
				<div class="box-body">
					<table id="example2" class="table table-bordered">
						<thead>
							<tr class="success">

								<th>STT</th>
								<th>Mã sự cố</th>
								<th>Mã học viên</th>
								<th>Mã bộ đề</th>
								<th>Thời gian</th>
								<th>Thời gian còn lại</th>
								<th>Nội dung</th>
								<th class="text-center">
									<button class="btn btn-primary btn-xs btn-flat">Thêm</button>
								</th>
							</tr>
						</thead>
						<tbody>
							@{
								int stt = 0;
								foreach (DataAccess.XULYSUCO row in ViewBag.Xulysuco)
								{
									stt++;
									<tr>

										<th>@stt</th>
										<td>@row.IDXULYSUCO</td>
										<td>@row.ID</td>
										<td>@row.IDBODE</td>
										<td>@row.THOIGIAN</td>
										<td>@row.NOIDUNG</td>
										<td class="text-center">
											<button class="btn btn-info btn-xs btn-flat" onclick="">Xem</button>
											<button class="btn btn-success btn-xs btn-flat">Sửa</button>
											<button class="btn btn-danger btn-xs btn-flat" disabled>Xóa</button>
											<button class="btn btn-danger btn-xs btn-flat">Xóa</button>

										</td>
									</tr>
								}
							}

						</tbody>
					</table>
					<div class="box-footer"><a href="/admin/dashboard/" class="btn btn-danger btn-xs btn-flat">Trở Về</a></div>

				</div>
				<!-- /.box-body -->
			</div>
			<!-- /.box -->
		</div>
	</div>
</section>



