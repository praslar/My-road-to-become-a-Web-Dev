@model DataAccess.TaiKhoan
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>DLU - Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/Back-end/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/Back-end/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/Back-end/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/Back-end/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Content/Back-end/plugins/iCheck/square/blue.css">
    <link rel="icon" href="~/Content/Back-end/dist/img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="login-page">
    <div class="login-box">

        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg"><img src="~/Content/Back-end/dist/img/logo_DLU.png" /></p>

            @if (TempData["AlertMessage"] != null)
            {
                <div class="col-lg-12" hide>
                    <div id="AlertBox" class="alert text-center @TempData["AlertType"]">
                        @Html.Raw(TempData["AlertMessage"])
                    </div>
                </div>
            }
            <p class="login-box-msg">Lấy Mật Khẩu</p>
            @using (Html.BeginForm("LayMatKhau", "DangNhap", FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                <div class="form-group has-feedback">

                    <input type="text" name="KeyPassword" class="form-control" placeholder="Nhập mã xác nhận"/>
                    <span class="glyphicon glyphicon-barcode form-control-feedback"></span>
                   
                </div>
                <div class="form-group has-feedback">
                    <input type="text" value="@Html.Raw(TempData["Email"])" class="form-control" placeholder="Nhập gmail" disabled />
                    <input type="text" name="Email" value="@Html.Raw(TempData["Email"])" class="form-control hidden" placeholder="Nhập gmail" />
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" name="PasswordNew" class="form-control" placeholder="Nhập mật khẩu mới" />
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
    
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Xắc Nhận</button>
                    </div>
                    <!-- /.col -->
                </div>
            }
            <!-- /.social-auth-links -->
           

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Content/Back-end/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/Back-end/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/Back-end/plugins/iCheck/icheck.min.js"></script>
    <script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });
    </script>
    <script>
        $(function () {
            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(5000).slideUp(1000);
        });
    </script>
</body>
</html>

