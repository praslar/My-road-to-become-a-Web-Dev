                                    <a class="btn btn-primary btn-xs btn-flat " onclick="ChucVu.Modal_Create_Edit_ChucVu(null,'Add')">Thêm</a>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="data_ChucVu"></tbody>
