                    <div class="box-footer">
                        <a href="/admin/dashboard/" class="btn btn-danger btn-xs btn-flat">Trở Về</a>

                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

@RenderPage("Create_Edit.cshtml")
